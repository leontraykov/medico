<!-- ======= Contact Section ======= -->
<section id="contact" class="contact">
  <div class="container">

    <div class="section-title">
      <h2><%= t("contact.title") %></h2>
      <p><%= t("contact.description") %></p>
    </div>

  </div>

  <div>
    <iframe style="border:0; width: 100%; height: 350px;" src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d12097.433213460943!2d-74.0062269!3d40.7101282!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0xb89d1fe6bc499443!2sDowntown+Conference+Center!5e0!3m2!1smk!2sbg!4v1539943755621" frameborder="0" allowfullscreen></iframe>
  </div>

  <div class="container">

    <div class="row mt-5">

      <div class="col-lg-6">

        <div class="row">
          <div class="col-md-12">
            <div class="info-box">
              <i class="bx bx-map"></i>
              <h3><%= t("contact.address_heading") %></h3>
              <p><%= t("contact.address") %></p>
            </div>
          </div>
          <div class="col-md-6">
            <div class="info-box mt-4">
              <i class="bx bx-envelope"></i>
              <h3><%= t("contact.email_heading") %></h3>
              <p><%= t("contact.email_1") %><br><%= t("contact.email_2") %></p>
            </div>
          </div>
          <div class="col-md-6">
            <div class="info-box mt-4">
              <i class="bx bx-phone-call"></i>
              <h3><%= t("contact.call_heading") %></h3>
              <p><%= t("contact.phone_1") %><br><%= t("contact.phone_2") %></p>
            </div>
          </div>
        </div>

      </div>

      <div class="col-lg-6">
        <form action="forms/contact.php" method="post" role="form" class="php-email-form">
          <div class="row">
            <div class="col-md-6 form-group">
              <input type="text" name="name" class="form-control" id="name" placeholder="<%= t("contact.name_placeholder") %>" required="">
            </div>
            <div class="col-md-6 form-group mt-3 mt-md-0">
              <input type="email" class="form-control" name="email" id="email" placeholder="<%= t("contact.email_placeholder") %>" required="">
            </div>
          </div>
          <div class="form-group mt-3">
            <input type="text" class="form-control" name="subject" id="subject" placeholder="<%= t("contact.subject_placeholder") %>" required="">
          </div>
          <div class="form-group mt-3">
            <textarea class="form-control" name="message" rows="7" placeholder="<%= t("contact.message_placeholder") %>" required=""></textarea>
          </div>
          <div class="my-3">
            <div class="loading"><%= t("contact.loading") %></div>
            <div class="error-message"></div>
            <div class="sent-message"><%= t("contact.sent_message") %></div>
          </div>
          <div class="text-center"><button type="submit"><%= t("contact.send_button") %></button></div>
        </form>
      </div>

    </div>

  </div>
</section><!-- End Contact Section -->
